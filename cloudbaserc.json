{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "cloudreve",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "cloudreve",
          "servicePath": "/pan",
          "uploadType": "image",
          "containerPort": 80,
          "imageInfo": {
            "imageUrl": "ccr.ccs.tencentyun.com/tcb_public/bitwardenrs_server:alpine"
          },
          "envVariables": {
            "WEBSOCKET_ENABLED": "false"
          },
          "volumeMounts": {
            "/cloudreve": "cloudreve-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CFS",
          "name": "cloudreve-cfs"
        }
      ]
    }
  }
}
