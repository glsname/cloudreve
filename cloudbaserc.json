{
    "version": "2.0",
    "envId": "{{env.ENV_ID}}",
    "framework":{
        "name":"cloudreve",
        "plugins":{
            "client": {
                "use": "@cloudbase/framework-plugin-container",
                "inputs": {
                "cpu": 0.25,
                "mem": 0.5,    
                "serviceName": "cloudreve",
                "servicePath": "/cloudreve",
                "uploadType": "package",
                "containerPort": 80,
                "volumeMounts": {
                    "/cloudreve": "cloudreve-cfs"
                  }
                }
            }
        },
        "requirement": {
            "addons": [
              {
                "type": "CFS",
                "name": "cloudreve-cfs"
              }
            ]
          }
    }
}